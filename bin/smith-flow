#!/bin/bash

export SILE_PATH=/mnt/builds/fontproof

if [ $HOSTNAME = fossa ]
then
    prj=$(basename $PWD)
    rrun=../rrun-$prj
    if [ ! -x $rrun ]
    then
        echo "You are in $PWD which is not on the ramdisk, exiting..."
        exit 1
    fi
fi

if [ "$1" == "install" ]
then
    cp -p -v results/*.ttf ~/guest
    cp -p -v results/*.ttf ~/.fonts
    for www in web woff
    do
        if [ -d results/$www ]
        then
            cp -p -v results/$www/*.woff web
        fi
    done
    cp -a -v web/* ~/guest
else
    $HOME/.local/bin/smith "$@" $FLOWARGS
fi
