#!/bin/bash

export SILE_PATH=/mnt/builds/fontproof

if [ $HOSTNAME = fossa ]
then
    if [ -f wscript ]
    then
        prj=$(basename $PWD)
        rrun=../rrun-$prj
        if [ ! -x $rrun ]
        then
            echo "You are in $PWD which is not on the ramdisk, exiting..."
            exit 1
        fi
    fi
fi

if [ "$1" == "bisect" ]
then
    prj="$2"
    if [ -d "$prj" ]
    then
        pushd $prj
        smith distclean
        smith configure
        smith build
        if [ ! -f results/*-Regular.ttf ]
        then
            echo "broken build"
            exit 1
        fi
        echo "successful build"
        exit 0
        popd
    fi
fi

if [ "$1" == "install" ]
then
    cp -p -v results/*.ttf ~/guest
    cp -p -v results/*.ttf ~/.fonts
    for www in web woff
    do
        if [ -d results/$www ]
        then
            cp -p -v results/$www/*.woff* web
        fi
    done
    prj=$(basename $PWD)
    web=$HOME/guest/$prj-web
    rm -rf $web
    mkdir $web
    cp -a -v web/* $web
else
    $HOME/.local/bin/smith "$@" $FLOWARGS
fi
