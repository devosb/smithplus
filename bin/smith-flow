#!/bin/bash

export SILE_PATH=/mnt/builds/fontproof

if [ "$1" == "install" ]
then
    cp -p -v results/*.ttf ~/local/guest
    cp -p -v results/*.ttf ~/.fonts
    for www in web woff
    do
        if [ -d results/$www ]
        then
            cp -p -v results/$www/*.woff web
        fi
    done
    cp -a -v web/* ~/local/guest
else
    $HOME/.local/bin/smith "$@" $FLOWARGS
fi
