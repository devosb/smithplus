#/bin/bash

umask 022
sudo echo root

for level in 1 2 3 4 5 6 7 8 9 ''
do
    for upgrade in .*/${level}upgrade.bash
    do
        if [ ! -f ${upgrade} ]
        then
            continue
        fi
        lib=$(dirname ${upgrade})
        src=${lib#.}
        pushd ${src}
        bash ../${upgrade}
        popd
    done

    if [ $HOSTNAME != apple ]
    then
        for upgrade in .*/${level}upgrade-host.bash
        do
            if [ ! -f ${upgrade} ]
            then
                continue
            fi
            lib=$(dirname ${upgrade})
            src=${lib#.}
            pushd ${src}
            bash ../${upgrade}
            popd
        done
    fi

    if [ $HOSTNAME = apple ]
    then
        for upgrade in .*/${level}upgrade-guest.bash
        do
            if [ ! -f ${upgrade} ]
            then
                continue
            fi
            lib=$(dirname ${upgrade})
            src=${lib#.}
            pushd ${src}
            bash ../${upgrade}
            popd
        done
    fi
done

pip3 uninstall gftools
pip3 install gftools

pushd /run/shm
echo shebang
grep /usr/bin/python ~/.local/bin/*
echo py2
grep /usr/bin/python ~/.local/bin/* | grep -v /usr/bin/python3
ls -lt ~/.local/bin/ /usr/local/bin/ ~/builds/fontvalidator/bin
find /usr/local/lib -name fontforge* -exec ls -l {} \;
find /usr/local/lib -name psMat* -exec ls -l {} \;
popd

# Use the latest fontTools
pip3 show fonttools
# rm -rf $HOME/.local/lib/python*/site-packages/fonttools-*.egg
# pushd fonttools
# bash ../.fonttools/upgrade.bash
# popd
# pip3 show fonttools

rm -rf fourplus
python3 -m venv fourplus
source fourplus/bin/activate
pip3 install fontmake
pip3 install MutatorMath
