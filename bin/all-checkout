#/bin/bash

locations=host
if [ $HOSTNAME = apple ]
then
    locations=guest
fi

for location in all $locations
do
    suffix=-$location
    if [ $location = all ]
    then
        suffix=''
    fi
    for checkout in .*/checkout${suffix}.bash
    do
        lib=$(dirname ${checkout})
        src=${lib#.}
        echo rm -rf $src
        echo bash $checkout
    done
done
