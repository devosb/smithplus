#!/bin/bash

prj=$(basename $PWD)
cmd=../docs-$prj
upgrade=$SMITHHOME/$prj/upgrade*.bash
if [ -x $cmd ]
then
    echo "now running $cmd"
    $cmd
elif [ -f $upgrade ]
then
    umask 022
    bash $upgrade
elif [ -f pyproject.toml ]
then
    python3 -m pip install --user -e .
else
    echo "unknown upgrade workflow"
fi
