#!/bin/bash

endswith()
{
    filename="$1"
    ext="$2"
    base_ext=$(basename $filename)
    base=$(basename $base_ext $ext)
    if [ $base_ext = $base ]
    then
        return 1
    else
        return 0
    fi
}

endswith "$1" ".ufo"
if [ $? -eq 0 ]
then
    psfnormalize -v 3ff -p checkfix=none "$1"
    fontforge -nosplash "$1"
    psfnormalize -v 3 -p checkfix=none "$1"
else
    fontforge -nosplash "$1"
fi
