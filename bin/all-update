#/bin/bash

locations=host
if [ $HOSTNAME = apple ]
then
    locations=guest
    # ssh-add $HOME/.ssh/id_ed25519_world
fi

for location in all $locations
do
    suffix=-$location
    if [ $location = all ]
    then
        suffix=''
    fi
    for update in .*/update${suffix}.bash
    do
        lib=$(dirname ${update})
        src=${lib#.}
        pushd ${src}
        bash ../${update}
        popd
    done
done
