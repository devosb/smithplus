#!/bin/bash

if [ -z "$1" ]
then
    echo "new test name must be specified"
    exit 1
fi

tmp=$(mktemp -p /run/shm)
for dspace in source/*Design.designspace source/*Smith.designspace
do
    if [ -f $dspace ]
    then
        sed -e "s/Pro/$1/g" $dspace > $tmp
        mv $tmp $dspace
    fi
done
for ufo in source/*.ufo source/masters/*.ufo
do
    if [ -d $ufo ]
    then
        renameufo "$1" $ufo
    fi
done
