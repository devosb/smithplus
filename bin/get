#!/bin/bash

prj=$(basename $PWD)

font=""
for cmd in ../rrun-$prj*
do
    if [ -x $cmd ]
    then
        echo "now running $cmd"
        $cmd
        font="found"
    fi
done

if [ -z "$font" ]
then
    dir=/mnt/builds/$prj
    if [ -d $dir ]
    then
        echo "now running rsync $dir"
        rsync -a -v $dir/ .
    fi
fi
